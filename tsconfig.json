{
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@types": ["./src/types"],
			"@router/*": ["./src/router/*"],
			"@domain/*": ["./src/domain/*"],
			"@components/*": ["./src/components/*"],
			"@styles/*": ["./src/styles/*"],
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly",
					"goToDefinition": true,
				}
			}
		]
	}
}